{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
