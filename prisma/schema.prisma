generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin-arm64", "rhel-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  cognitoId String   @unique
  birthday  DateTime
  phone     Phone
  name      Name
  confirmed Boolean

  @@map("users")
}

type Phone {
  country  String
  areaCode Int
  number   Int
}

type Name {
  first String
  last  String
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        String
  description String
  color       String
  parent      String?
  active      Boolean
  type        String

  @@map("categories")
}

model Account {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  type        String
  user        String
  description String
  balance     Float
  color       String

  @@map("accounts")
}
