generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin-arm64", "rhel-openssl-1.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  cognitoId      String   @unique
  fiscalDocument String   @unique
  birthday       DateTime
  gender         String
  phone          String
  name           Name
  confirmed      Boolean
}

type Name {
  first    String
  last     String
}

model Category {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  user        String  
  description String
  color       String
  parent      String?
  active      Boolean
  type        String
}
