generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  cognitoId      String   @unique
  fiscalDocument String   @unique
  birthday       DateTime
  gender         String
  phone          String
  name           Name
  confirmed      Boolean
}

type Name {
  first    String
  last     String
  fullname String
}
